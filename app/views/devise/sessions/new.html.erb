<div class="row">
  <div id="login-page" class="span6 offset3 basic-form-page">
    <br>
    <br>
    <br>
    <div class="box form-container login-buyble">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "simple_form form-horizontal form-login"}) do |f| %>
        <br>
        <legend>帳號登入</legend>
        
        <div class="control-group">
          <%= f.label :account, "帳號", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :account, :required => true, :autofocus => true %>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :password, "密碼", :class => "control-label" %>
          <div class="controls">
            <%= f.password_field :password, :required => true %>
          </div>
        </div>
        
        <div class="control-group">
          <div class="controls">
            <label class="checkbox">
              <%= f.check_box :remember_me if devise_mapping.rememberable? %> 記得我
            </label>
            <%= button_tag("登入", :class => "btn btn-primary btn-submit") %>
          </div>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>